<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PostActivity">


    <LinearLayout
        android:id="@+id/holderHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/light_yellow"
        >


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="2dp"
            android:textSize="20dp"
            android:text="Bài đăng" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_above="@id/holderFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/holderHeader">

        <RelativeLayout
            android:id="@+id/holderContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPost"
                android:paddingLeft="8dp"
                android:text="Cần bán xe honda cũ - 50cc"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/holderPriceFavoriteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="6.000.000đ"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/white"
                    android:drawableEnd="@drawable/ic_not_favorite"
                    android:text="Lưu tin"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <View
                android:id="@+id/separatorLine1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/holderPriceFavoriteButton"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/userSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorLine1"
                android:paddingHorizontal="8dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location_destination_30" />
                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phường 9, Quận 1, Thành phố Hồ Chí Minh" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/txtAddress"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_launcher_background"
                    app:shapeAppearanceOverlay="@style/circleImageView" />

                <TextView
                    android:id="@+id/txtUserFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAddress"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imgAvatar"
                    android:text="Nguyễn Khánh Toàn"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/holderRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtUserFullName"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/imgAvatar">

                    <TextView
                        android:id="@+id/ratingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Đánh giá" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_rate" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_rate" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_rate" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_rate" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_rate_half" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAddress"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/light_yellow"
                    android:text="Xem trang"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <View
                android:id="@+id/separatorLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/userSummary"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorLine2"
                android:paddingHorizontal="8dp"
                android:text="Mô tả"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionLabel"
                android:padding="8dp"
                android:text="✅ HỆ THỐNG CỬA HÀNG XE MÁY 39 ✅ 💰 CẦN MUA XE MÁY CŨ GIÁ CỰC CAO
💰 🌹 Hoa hồng mạnh cho ae mai mối 🌹 🎊 GIAO DỊCH 24/24 - LỄ TẾT KHÔNG NGHỈ 🎊 Bên mình cần mua tất cả các loại xe máy cũ GIÁ CỰC KÌ HẤP DẪN 💰 🛵 CHUYÊN MUA BÁN XE MÁY CŨ CÁC LOẠI: XE GA, XE SỐ, XE MÔ TÔ, XE BS TỈNH ⛔️ ƯU TIÊN : XE CHÍNH CHỦ, CÁC DÒNG XE KIỂNG MỌI THỂ LOẠI, TỪ KIỂNG NHẸ ĐẾN FULL KIỂNG >>> đảm bảo GIÁ CAO TỚI NÓC ❤️ ĐẶC BIỆT: BIỂN SỐ VIP, BIỂN SỐ PHONG THỦY GIÁ CAO HƠN THỊ TRƯỜNG 10%"
                android:textColor="@color/black" />


            <View
                android:id="@+id/separatorSpace1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/txtDescription"
                android:background="@color/grey" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorSpace1">

                <TextView
                    android:id="@+id/relatedPostLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:text="Tin đăng tương tự"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/relatedPostRecView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relatedPostLabel"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/holderFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_yellow"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:backgroundTint="@color/green_light"
            android:text="Gọi: 0123456789"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/btn_open_gg_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_light"
            android:padding="8dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Chỉ đường"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green_light"
            android:textAllCaps="false"
            android:padding="8dp"
            android:text="Bình luận" />
    </LinearLayout>
</RelativeLayout>