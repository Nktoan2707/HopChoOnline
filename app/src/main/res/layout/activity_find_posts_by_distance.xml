<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPostsByDistanceActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_yellow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginBottom="10dp"
        app:homeAsUpIndicator="@drawable/ic_arrow_back_30"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/editTextFindPostByDistanceLayout"
        >

        <EditText
            android:id="@+id/edtTextFindPostByDistance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:text=""
            >

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:text="Bán kính (Km)" />
    </RelativeLayout>




    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupChoosePostType"
        android:orientation="horizontal"
        android:layout_below="@+id/editTextFindPostByDistanceLayout"
        android:layout_marginLeft="20dp"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:layout_marginRight="10dp"
            android:id="@+id/checkAllPost"
            >

        </RadioButton>
        <RadioButton
            android:id="@+id/checkSellPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài bán hàng"
            android:layout_marginRight="10dp"
            />

        <RadioButton
            android:id="@+id/checkBuyPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/checkSellPost"
            android:text="Bài mua hàng"
            android:layout_marginRight="10dp"
            />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:layout_below="@+id/radioGroupChoosePostType"
        android:id="@+id/findPostBtn"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        >

    </Button>


<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:id="@+id/mapPost"-->
<!--        android:name="com.google.android.gms.maps.SupportMapFragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@+id/checkSellPost">-->

<!--    </androidx.fragment.app.FragmentContainerView>-->

    <fragment
        android:id="@+id/mapPost"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/findPostBtn">
    </fragment>

</RelativeLayout>