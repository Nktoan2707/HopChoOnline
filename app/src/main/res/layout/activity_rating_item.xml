<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Nguyễn Khánh Toàn"
        android:textSize="18sp" />
    <RatingBar
        android:id="@+id/ratingBarProfile"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:isIndicator="true"
        android:numStars="5"
        android:layout_toEndOf="@id/txtUserFullName"
        android:progressDrawable="@drawable/ratingbar_small_stars"
        android:rating="4.7"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:stepSize="0.1"></RatingBar>
    <TextView
    android:id="@+id/txtRatingComment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
        android:layout_below="@id/txtUserFullName"
    android:text="Bán hay bán tốt bán nhiệt tình"
    android:textSize="15sp" />


</RelativeLayout>