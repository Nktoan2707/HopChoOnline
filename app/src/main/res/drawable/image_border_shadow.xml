<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey" />
            <padding
                android:bottom="4dp"
                android:right="4dp"
                android:top="4dp"
                android:left="4dp"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
